{
  "name": "vite-pwa-test",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "npm run lint:strict",
    "lint:relaxed": "ESLINT_RELAXED=true eslint .",
    "lint:strict": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run build && npm run lint && npm run test",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy ./dist --project-name=vite-pwa-test",
    "deploy:preview": "npm run build && wrangler pages deploy ./dist --project-name=vite-pwa-test",
    "wrangler": "wrangler",
    "security": "docker run --rm -v \"${PWD}:/src\" returntocorp/semgrep semgrep --config=p/security-audit --config=p/secrets --config=p/owasp-top-ten --config=p/react --config=p/typescript --config=p/javascript --config=.semgrep.yml --json --output=semgrep-results.json",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "bash -c 'tsc -b --noEmit'"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-plugin-react-dom": "^2.8.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-react-x": "^2.12.2",
    "globals": "^17.3.0",
    "happy-dom": "^20.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.63.0"
  }
}
